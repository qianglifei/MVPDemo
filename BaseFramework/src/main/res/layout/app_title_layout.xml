<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_title"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@color/app_title"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="center|left">

        <LinearLayout
            android:id="@+id/ll_return"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center|left"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_leftone"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:scaleType="center"
                android:src="@mipmap/ic_back"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_leftthree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="返回"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:visibility="gone" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_lefttwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:src="@mipmap/ic_back"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_leftthree"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:scaleType="center"
            android:src="@mipmap/ic_back"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_centertitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_centertitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="19sp" />

        <ImageView
            android:id="@+id/iv_centerone"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="center"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_centertwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center|right"
        android:orientation="horizontal"
        android:paddingRight="11dp">

        <ImageView
            android:id="@+id/iv_rightthree"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:clickable="true"
            android:scaleType="center"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_righttwo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="center"
            android:visibility="gone" />


        <TextView
            android:id="@+id/tv_rightone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>